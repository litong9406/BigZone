.app{
  .el-tree{
    color:$text-main-color;
  }
  .el-tree-node__content{
    height: 50px;
    padding-right:18px;
    font-size: $md-size;
    .el-checkbox{
      padding-left: 18px;
    }
    &:hover{
      .operate-btns{
        display: block;
      }
    }
  }
  .el-tree-node__content:hover{
    background-color:$gray-color;
  }
  .el-tree-node__children{
    .el-tree-node__content{
      font-size: $xs-size;
    }
  }
  .el-tree-node{
    border-bottom:1px solid $border-color;
    .el-tree-node{
      border-bottom: 0;
    }
  }
  .custom-tree-node .operate-btns .el-button i {
    color:#fff;
  }
  .el-tree-node__children{
    font-size: $xs-size;
  }
  .el-tree-node__content>.el-tree-node__expand-icon{
    display: none;
  }
}